{
  "family": "sanmarino-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::021891592771:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::021891592771:role/ecsTaskAppRole",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "021891592771.dkr.ecr.us-east-2.amazonaws.com/sanmarino-backend:20251020-1426",
      "portMappings": [
        {
          "containerPort": 5002,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/sanmarino-backend",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "api"
        }
      },
      "environment": [
        {
          "name": "JwtSettings__DurationInMinutes",
          "value": "60"
        },
        {
          "name": "ConnectionStrings__ZooSanMarinoContext",
          "value": "Host=sanmarinoapp.cfs22w804e5g.us-east-2.rds.amazonaws.com;Port=5432;Username=postgres;Password=123456789;Database=sanmarinoapp;SSL Mode=Require;Trust Server Certificate=true;Timeout=15;Command Timeout=30"
        },
        {
          "name": "JwtSettings__Key",
          "value": "your-jwt-secret-key-here"
        },
        {
          "name": "JwtSettings__Issuer",
          "value": "ZooSanMarino.API"
        },
        {
          "name": "JwtSettings__Audience",
          "value": "ZooSanMarino.Client"
        }
      ]
    }
  ]
}
